<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/login_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/firt_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1">

            <TextView
                style="@style/home_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/top_card"
                android:text="银行卡" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/firt_menu_qrcode"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                style="@style/home_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/top_qrcord"
                android:text="扫码" />
        </RelativeLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/page1_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="0.5dp"
        android:verticalSpacing="0.5dp"
        android:background="@color/main_dddddd"
        android:numColumns="3"></GridView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_dddddd"
        />
</LinearLayout>