<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout" />


    <TextView
        android:id="@+id/textView"
        style="@style/ConfigureItemTextStyle"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_50"
        android:text="@string/label_marchant_number" />

    <EditText
        android:id="@+id/extxt_marchant_number"
        style="@style/ConfigureItemTextStyle.Edit"
        android:editable="false"
        android:enabled="true"
        android:maxLength="15" />


    <TextView
        style="@style/ConfigureItemTextStyle"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_30"
        android:text="@string/label_term_number" />

    <EditText
        android:id="@+id/extxt_term_no"
        style="@style/ConfigureItemTextStyle.Edit"
        android:editable="false"
        android:enabled="true" />

    <TextView
        style="@style/ConfigureItemTextStyle"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_30"
        android:text="@string/label_marchant_name" />

    <EditText
        android:id="@+id/extxt_marchant_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/textbox_input"
        android:enabled="true"
        android:lines="1"
        android:paddingLeft="@dimen/margin_20"
        android:textColor="#2b2525"
        android:textSize="@dimen/font_36" />

    <TextView
        style="@style/ConfigureItemTextStyle"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_30"
        android:text="@string/label_marchant_name2"
        android:visibility="gone" />

    <EditText
        android:id="@+id/extxt_marchant_name2"
        style="@style/ConfigureItemTextStyle.Edit"
        android:visibility="gone"
        android:editable="false"
        android:enabled="false" />
</LinearLayout>