<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_title_layout"/>
    <TextView
        android:id="@+id/actual_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_106"
        android:textColor="@color/card_query"
        android:textSize="@dimen/px_60"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/manage_entry_item_height"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pay_icon_money"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应收金额 :"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/card_query"
            android:textSize="@dimen/px_26"/>
        <TextView
            android:id="@+id/re_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:textColor="@color/card_query"
            android:textSize="@dimen/px_26"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/manage_entry_item_height"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pay_icon_discount"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="享受折扣 :"
            android:layout_toRightOf="@id/iv_icon2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/card_query"
            android:textSize="@dimen/px_26"/>
        <TextView
            android:id="@+id/en_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:textColor="@color/card_query"
            android:textSize="@dimen/px_26"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/manage_entry_item_height"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:id="@+id/iv_icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pay_icon_integral"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拥有积分 :"
            android:layout_toRightOf="@id/iv_icon3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/card_query"
            android:textSize="@dimen/px_26"/>
        <TextView
            android:id="@+id/own_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:textColor="@color/card_query"
            android:textSize="@dimen/px_26"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/manage_entry_item_height"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:id="@+id/iv_icon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pay_inte_dis"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分折扣 :"
            android:layout_toRightOf="@id/iv_icon4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/card_query"
            android:textSize="@dimen/px_26"/>
        <TextView
            android:id="@+id/int_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:hint="400积分=1元"
            android:textColorHint="@color/hint_txt_color"
            android:textColor="@color/card_query"
            android:textSize="@dimen/px_26"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_60"
        android:layout_marginRight="@dimen/margin_60"
        android:layout_marginTop="@dimen/margin_100"
        android:orientation="horizontal">
        <Button
            android:id="@+id/positive_btn"
            style="@style/BaseButton.Positive"
            android:layout_weight="1"
            android:onClick="onConfirmClick"
            android:layout_marginRight="10dp"
            android:text="不使用积分"/>
        <Button
            android:id="@+id/positive_btn1"
            style="@style/BaseButton.Positive"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:onClick="onConfirmClick"
            android:text="使用积分"/>
    </LinearLayout>


</LinearLayout>