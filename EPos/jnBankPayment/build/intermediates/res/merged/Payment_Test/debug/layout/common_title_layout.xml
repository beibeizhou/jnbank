<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:background="@color/main_c72e2e">

    <ImageButton
        android:id="@+id/imgbtn_back"
        android:layout_width="@dimen/ic_back_width"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/sel_back_btn"/>

    <TextView
        android:id="@+id/txtvw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/font_white"
        android:textSize="@dimen/font_title"/>

    <Button
        android:id="@+id/btn_title_right"
        android:layout_width="45px"
        android:layout_height="45px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_36"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onRightButtonClick"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_36"
        android:visibility="gone"/>

</RelativeLayout>
